<h1><%= t Pair.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Pair.human_attribute_name(:base_id) %></th>
      <th><%= Pair.human_attribute_name(:quote_id) %></th>
      <th><%= Pair.human_attribute_name(:name) %></th>
      <th><%= Pair.human_attribute_name(:code) %></th>
      <th><%= Pair.human_attribute_name(:level) %></th>
      <th><%= Pair.human_attribute_name(:decimal_places) %></th>
      <th><%= Pair.human_attribute_name(:min_price) %></th>
      <th><%= Pair.human_attribute_name(:max_price) %></th>
      <th><%= Pair.human_attribute_name(:min_amount) %></th>
      <th><%= Pair.human_attribute_name(:hidden) %></th>
      <th><%= Pair.human_attribute_name(:fee) %></th>
      <th><%= Pair.human_attribute_name(:cover_image) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @pairs.each do |pair| %>
      <tr>
        <td><%= Coin.find(pair.base_id).code %></td>
        <td><%= Coin.find(pair.quote_id).code %></td>
        <td><%= pair.name %></td>
        <td><%= pair.code %></td>
        <td><%= pair.level %></td>
        <td><%= pair.decimal_places %></td>
        <td><%= pair.min_price %></td>
        <td><%= pair.max_price %></td>
        <td><%= pair.min_amount %></td>
        <td><%= pair.hidden %></td>
        <td><%= pair.fee %></td>
        <% if pair.cover_image.attached? %>
          <td><%= image_tag pair.cover_image.variant(resize_to_limit: [30, 30]) %></td>
        <% else %>
          <td></td>
        <% end %>        <td><%= status_mark pair.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: pair %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_pair_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
