<div class='container'>
  <table class='table table-striped'>
    <tbody>
      <% @pair.attributes.each do |key, value| %>
        <tr>
          <% unless key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' || key == 'updated_at' ||  key == 'cover_image_url' %>
            <% if key == 'status' %>
              <td><%= t 'status.status' %></td>
              <td><%= status_mark @pair.status %></td>
            <% else %>
              <td><%= t "activerecord.attributes.pair.#{key}" %></td>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'admin/shared/show_rich_text_content', object: @pair %>
  <%#= render 'admin/shared/show_images', object: @pair %>
</div>
